<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent">





    <TableLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        >
    <!--第一行  在TableRow里面设置底色，然后在上面覆盖一层需要的图形或者文字，露出来的地方成为边框
    设置的底色为边框色-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!--第一行第一列       使用layout_weight 属性来规定是否是均分，我这儿使用均分，所有每一列都为1-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <RelativeLayout
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">

                <!--第一行第一列 图片-->
                <TextView
                    android:id="@+id/kong_qi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"
                     />

                <!--第一行 第一列 文字-->
                <TextView
                    android:id="@+id/wind_scale_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kong_qi_tv"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"/>
            </RelativeLayout>
        </LinearLayout>

        <!--一下内容的布局和上面的布局是一样的-->

        <!--第一行 第二列-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <!--第一行 第二列 布局-->
            <RelativeLayout
                android:id="@+id/Re_humidity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp">
                <!--第一行 第二列 图片-->
                <TextView
                    android:id="@+id/shi_du"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="相对湿度"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"

                    />

                <!--第一行 第二列 文字-->
                <TextView
                    android:id="@+id/shi_du__tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:layout_below="@+id/shi_du"
                    android:textColor="#f0ffff"/>
            </RelativeLayout>
        </LinearLayout>

        <!--第一行 第三列-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <!--第一行 第三列 布局-->
            <RelativeLayout
                android:id="@+id/Re_pressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginTop="5dp">
                <!--第一行 第三列 图片-->
                <TextView
                    android:id="@+id/qi_ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="气压"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"
                     />
                <!--第一行 第三列 文字-->
                <TextView
                    android:id="@+id/air_pressure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/qi_ya"
                    android:layout_centerHorizontal="true"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"/>
            </RelativeLayout>
        </LinearLayout>

        <!--第一行 第四列-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <!--第一行 第四列 布局-->
            <RelativeLayout
                android:id="@+id/Re_visibility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:layout_marginTop="5dp">
                <!--第一行 第四列 图片-->
                <TextView
                    android:id="@+id/neng_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="能见度"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"
                    />
                <!--第一行 第四列 文字-->
                <TextView
                    android:id="@+id/visibility_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/neng_jian"
                    android:textSize="17dp"
                    android:textColor="#f0ffff"/>
            </RelativeLayout>
        </LinearLayout>


    </TableRow>
    </TableLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:background="#D0D0D0"
        android:layout_width="fill_parent"
        android:layout_height="1dp"/>
</LinearLayout>