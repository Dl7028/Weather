<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="2019-5-14"
        android:textColor="#f0ffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/low_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="23℃"
            android:textSize="17dp"
            android:textColor="#f0ffff"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:textSize="17dp"
            android:textColor="#f0ffff"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/high_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="20℃"
            android:textSize="17dp"
            android:textColor="#f0ffff"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/date_tv"
            android:layout_toEndOf="@+id/date_tv"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp">

        <TextView
            android:id="@+id/day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="晴"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/night_tv"
            android:layout_toStartOf="@+id/night_tv"
            android:textColor="#f0ffff"
            />

        <TextView
            android:id="@+id/zhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="转"
            android:textSize="17dp"
            android:textColor="#f0ffff"/>



        <TextView
            android:id="@+id/night_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:layout_marginRight="41dp"
            android:layout_marginEnd="41dp"
            android:layout_toLeftOf="@+id/high_tv"
            android:layout_toStartOf="@+id/high_tv"
            android:layout_alignParentTop="true"
            android:textColor="#f0ffff"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>